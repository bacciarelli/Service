{% extends 'base.html.twig' %}

{% block body %}
<div class="col-lg-10">
    <h1>Brands list</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for brand in brands %}
                    <tr>
                        <td><a href="{{ path('brand_show', { 'id': brand.id }) }}">{{ brand.id }}</a></td>
                        <td>{{ brand.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('brand_show', { 'id': brand.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('brand_edit', { 'id': brand.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('brand_new') }}">Create a new brand</a>
        </li>
    </ul>
</div>
{% endblock %}
