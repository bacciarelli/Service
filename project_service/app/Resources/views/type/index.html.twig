{% extends 'base.html.twig' %}

{% block body %}
<div class="col-lg-10">
    <h1>Types list</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td><a href="{{ path('type_show', { 'id': type.id }) }}">{{ type.id }}</a></td>
                        <td>{{ type.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('type_show', { 'id': type.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('type_edit', { 'id': type.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('type_new') }}">Create a new type</a>
        </li>
    </ul>
</div>
{% endblock %}
