{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-10">
        <h1>Machine</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ machine.id }}</td>
                    </tr>
                    <tr>
                        <th>Client</th>
                        <td>{{ machine.client }}</td>
                    </tr>
                    <tr>
                        <th>Complaint number</th>
                        <td>{{ machine.complaintNumber }}</td>
                    </tr>
                    <tr>
                        <th>Complaint description</th>
                        <td>{{ machine.complaintDescription }}</td>
                    </tr>
                    <tr>
                        <th>Machine description</th>
                        <td>{{ machine.machineDescription }}</td>
                    </tr>
                    <tr>
                        <th>Brand</th>
                        <td>{{ machine.brand }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ machine.type }}</td>
                    </tr>
                    <tr>
                        <th>Model</th>
                        <td>{{ machine.modelMachine }}</td>
                    </tr>
                    <tr>
                        <th>Insertion date</th>
                        <td>{% if machine.insertionDate %}{{ machine.insertionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Repair description</th>
                        <td>{{ machine.repairDescription }}</td>
                    </tr>
                    <tr>
                        <th>Repair date</th>
                        <td>{% if machine.repairDate %}{{ machine.repairDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Repair status</th>
                        <td>{{ machine.repairStatus }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <ul>
            <li>
                <a href="{{ path('machine_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('machine_edit', { 'id': machine.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>

{% endblock %}
